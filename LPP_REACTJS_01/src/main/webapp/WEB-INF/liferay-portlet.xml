<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>calc</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css> <!-- стили -->
		<header-portlet-javascript>/js/react.min.js</header-portlet-javascript> <!-- подключаем библиотеку реакт -->
		<header-portlet-javascript>/js/react-dom.min.js</header-portlet-javascript> <!-- подключаем библиотеку реакт дом -->
		<header-portlet-javascript>/js/browser.min.js</header-portlet-javascript> <!-- подключаем библиотеку для babel -->
		<css-class-wrapper>calc-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>invoke-rest</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-javascript>/js/react.min.js</header-portlet-javascript> <!-- подключаем библиотеку реакт -->
		<header-portlet-javascript>/js/react-dom.min.js</header-portlet-javascript> <!-- подключаем библиотеку реакт дом -->
		<header-portlet-javascript>/js/browser.min.js</header-portlet-javascript> <!-- подключаем библиотеку для babel -->
		<header-portlet-javascript>/js/jquery-latest.min.js</header-portlet-javascript> <!-- подключаем библиотеку jQuery для вызова сервисов -->
		<header-portlet-javascript>/js/axios.min.js</header-portlet-javascript>
		<css-class-wrapper>invoke-rest-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>